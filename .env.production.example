# Database Configuration
DB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=labelreader
DB_USER=labelreader_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_MIN_256_BITS
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# API Configuration
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Deployment Configuration
VERSION=latest
PROD_HOST=your-server-ip
PROD_USERNAME=deploy
PROD_PORT=22
PROD_URL=https://yourdomain.com

# Optional: Slack Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# File Upload Limits
MAX_FILE_SIZE=52428800

# Security Headers
SECURITY_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURITY_CSRF_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Monitoring & Logging
LOGGING_LEVEL=INFO
ENABLE_ACTUATOR_ENDPOINTS=health,info,metrics,prometheus

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Alertmanager Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=team@yourdomain.com
ALERT_EMAIL_TO_CRITICAL=oncall@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=/backups/mysql
BACKUP_RETENTION_DAYS=30
CONTAINER_NAME=labelreader-db-prod
